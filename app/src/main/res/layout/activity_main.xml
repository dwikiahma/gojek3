                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GoSend"
                    android:textSize="15sp"
                    android:layout_weight="1"
                    android:textAlignment="center" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>
